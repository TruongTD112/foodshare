          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@foodshare.com\",\n  \"password\": \"Admin123456\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/backoffice/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "backoffice", "register"]
            },
            "description": "Đăng ký tài khoản Admin mới"
          },
          "response": []
