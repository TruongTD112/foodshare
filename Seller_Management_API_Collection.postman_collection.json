              "raw": "{\n  \"name\": \"Pizza Margherita Updated - Seller Product\",\n  \"description\": \"Pizza cổ điển từ seller - đã cập nhật\",\n  \"price\": 160000.00,\n  \"quantityAvailable\": 45\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/seller/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "seller", "products", "{{product_id}}"]
            },
            "description": "Seller cập nhật thông tin sản phẩm của mình"
          },
          "response": []
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/seller/products/{{product_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "seller", "products", "{{product_id}}"]
            },
            "description": "Seller xóa sản phẩm của mình"
          },
          "response": []
