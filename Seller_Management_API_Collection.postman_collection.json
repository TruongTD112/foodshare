        {
          "name": "Get Products by Shop",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/seller/shops/{{shop_id}}/products",
              "host": ["{{base_url}}"],
              "path": ["api", "seller", "shops", "{{shop_id}}", "products"]
            },
            "description": "Seller xem danh sách sản phẩm của shop của mình"
