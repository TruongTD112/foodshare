        {
          "name": "Get Products by Shop and Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/seller/shops/{{shop_id}}/products/status/{{status}}",
              "host": ["{{base_url}}"],
              "path": ["api", "seller", "shops", "{{shop_id}}", "products", "status", "{{status}}"]
