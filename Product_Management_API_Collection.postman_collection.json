	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-set product_id from previous create response if available",
					"const productId = pm.environment.get('product_id');",
					"if (!productId || productId === '') {",
					"    // Set default product ID for testing",
					"    pm.environment.set('product_id', '1');",
					"    console.log('Set default product_id: 1');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-extract product_id from create product response",
					"if (pm.response.code === 200) {",
					"    const response = pm.response.json();",
					"    if (response.success && response.data && response.data.id) {",
					"        pm.environment.set('product_id', response.data.id);",
					"        console.log('Auto-set product_id from response:', response.data.id);",
					"    }",
					"}"
				]
			}
		}
