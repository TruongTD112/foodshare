	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-set order_id from previous create response if available",
					"const orderId = pm.environment.get('order_id');",
					"if (!orderId || orderId === '') {",
					"    // Set default order ID for testing",
					"    pm.environment.set('order_id', '1');",
					"    console.log('Set default order_id: 1');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-extract order_id from create order response",
					"if (pm.response.code === 200) {",
					"    const response = pm.response.json();",
					"    if (response.success && response.data && response.data.id) {",
					"        pm.environment.set('order_id', response.data.id);",
					"        console.log('Auto-set order_id from response:', response.data.id);",
					"    }",
					"}"
				]
			}
		}
